<form action="#" id="diagnosis-question" data-type="group_single">
    <fieldset>
        <legend>{{text}}</legend><div id="error" style="display: none;">
        </div>
        {{#each items}}
            <label for="{{this.id}}">{{this.name}}
                <input type="radio" name="choice" id="{{this.id}}" value="{{this.id}}" data-name="{{this.name}}"required>
            </label>
        {{/each}}
        <label for="none">None of the Above
            <input type="radio" name="choice" id="none" value="none">
        </label>
        <label for="unknown">I Don't Know
            <input type="radio" name="choice" id="unknown" value="unknown">
        </label>
        <button type="submit" id="submit-question-answer" data-clickable="submitQuestionAnswer">Continue</button>
    </fieldset>
</form>